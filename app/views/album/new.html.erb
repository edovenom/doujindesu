<div class="container">
  <h1>Submit a new album</h1>
  <%= form_for @albums, method: :post, url: album_create_path do |f| %>

    <div class="form-row">
      <div class="form-group col-6">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-6">
        <%= f.label :album_code %>
        <%= f.text_field :album_code, class: "form-control" %>
      </div>
      <div class="form-group col-6">
        <%= f.label :artist %>
        <%= f.text_field :artist, class: "form-control" %>
      </div>
      <div class="form-group col-6">
        <%= f.label :cover_link %>
        <%= f.text_field :cover_link, class: "form-control" %>
      </div>
      <div class="form-group col-6">
        <%= f.label :preview_link %>
        <%= f.text_field :preview_link, class: "form-control" %>
      </div>
      <%= f.submit "Add album", class: "btn btn-success" %>
    </div>
  <% end %>
</div>