<div class="container">
  
  <h1>Genres</h1>

  <%= link_to 'New Genre', new_genre_path, id: "new-genre", remote: true, class: "btn btn-success" %>
  <hr>
  <table class="table-striped" style="width:100%">
    <tbody id="genre-list">
      <% @genres.each do |genre| %>
          <td class="m-3 p-3"><%= genre.genre %></td>

          <% if logged_in? %>
            <% if current_user.permission_level == "admin" %>
              <td class="m-3 p-3"><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
