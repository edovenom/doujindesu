<div class="container">
	<h1>Log In</h1>
	<%= form_tag sessions_path do %>
		<div class="form-row">		
		  <div class="form-group col-6">
		    <%= label_tag :email %>
		    <%= text_field_tag :email, params[:email], class: "form-control" %>
		  </div>
		  <div class="form-group col-6">
		    <%= label_tag :password %>
		    <%= password_field_tag :password,nil, class: "form-control" %>
		  </div>
		  <%= submit_tag "Log In", class: "btn btn-success" %>
		</div>
	<% end %>
</div>